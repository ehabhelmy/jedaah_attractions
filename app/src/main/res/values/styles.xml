<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTheme">
        <item name="android:textSize">@dimen/static_title_size</item>
        <item name="android:textColor">@color/staticTitle</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:layout_marginBottom">@dimen/spaceBetweenTitleAndItems</item>
    </style>

    <style name="eventName">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>


</resources>
