<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/lightBlack"
    android:layout_height="match_parent">

    <include layout="@layout/loading_overlay" android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/loginContainer"
        android:background="@drawable/payment_bg"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_bold"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/static_title_size"
            android:layout_centerHorizontal="true"
            android:text="@string/contactUs" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/postal_address"
            android:textColor="@color/staticTitle"
            android:textSize="@dimen/static_title_size" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textView3"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/location_g" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView7"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imageView7"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_book"
            android:text="12, Al-Aziz , Jeddah"
            android:textSize="@dimen/titleSize" />


        <TextView
            android:id="@+id/telephone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/address"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/telephone"
            android:textColor="@color/staticTitle"
            android:textSize="@dimen/static_title_size" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/telephone_label"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/tele" />

        <TextView
            android:id="@+id/telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView8"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imageView8"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/gotham_book"
            android:text="01004576935"
            android:textSize="@dimen/titleSize" />

        <Button
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignTop="@id/imageView8"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_rectangle_stroke_black"
            android:text="@string/call"
            android:layout_marginTop="-12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/static_title_size" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/telephone"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/email_contact"
            android:textColor="@color/staticTitle"
            android:textSize="@dimen/static_title_size" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/email_label"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_email_black_24dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView9"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imageView9"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/gotham_book"
            android:text="ehab@gmail.com"
            android:textSize="@dimen/titleSize" />

        <Button
            android:id="@+id/send_mail"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignTop="@id/imageView9"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/rounded_rectangle_stroke_black"
            android:text="@string/send_message"
            android:layout_marginTop="-12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/static_title_size" />

        <TextView
            android:id="@+id/website_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/web_site_contact"
            android:textColor="@color/staticTitle"
            android:textSize="@dimen/static_title_size" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/website_label"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/website_g" />

        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView10"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imageView10"
            android:textColor="@color/white"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/gotham_book"
            android:text="ehab@gmail.com"
            android:textSize="@dimen/titleSize" />

        <TextView
            android:id="@+id/socialMedia_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/website"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/socail"
            android:textColor="@color/staticTitle"
            android:textSize="@dimen/static_title_size" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:layout_marginTop="10dp"
            android:layout_below="@id/socialMedia_label"
            android:layout_alignStart="@id/socialMedia_label"/>

    </RelativeLayout>
</RelativeLayout>
</ScrollView>