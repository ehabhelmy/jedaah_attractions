<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlack"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.spade.ja.ui.authentication.registeration.RegisterationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_bg"
        android:orientation="vertical">

        <include
            layout="@layout/loading_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/registerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/gotham_bold"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/imageContainer"
            android:layout_below="@+id/register_tv"
            android:layout_height="wrap_content">

            <com.spade.ja.ui.widget.CircularImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/profile_default" />

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/add_image"
                android:layout_alignBottom="@id/profile_image"
                android:layout_alignEnd="@id/profile_image"
                android:background="@drawable/green_circle">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/edit" />
            </FrameLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/imageContainer"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/name"
                android:textColor="@color/outerText"
                android:textSize="@dimen/daysRemaining" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/emailaddress"
                android:textColor="@color/outerText"
                android:textSize="@dimen/daysRemaining" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/email"
                android:layout_below="@+id/email"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/mobilenumber"
                android:textColor="@color/outerText"
                android:textSize="@dimen/daysRemaining" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="phone"
                android:textColor="@color/white"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/mobile"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/dob"
                android:textColor="@color/outerText"
                android:textSize="@dimen/daysRemaining" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginEnd="32dp"
                android:focusable="false"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableTint="@color/white"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/white"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/birthday"
                android:layout_below="@+id/birthday"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/gender"
                android:textColor="@color/outerText"
                android:textSize="@dimen/daysRemaining" />

            <CheckBox
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/male"
                android:textColor="@color/white" />

            <CheckBox
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/male"
                android:text="@string/female"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView212"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/male"
                android:layout_below="@+id/male"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/changePassword"
                android:textColor="@color/staticTitle"
                android:textSize="@dimen/static_title_size" />

            <TextView
                android:id="@+id/textView818"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView212"
                android:layout_below="@+id/textView212"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/newPassword"
                android:textColor="@color/outerText"
                android:textSize="@dimen/daysRemaining" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView818"
                android:layout_below="@+id/textView818"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/background"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/newPassword"
                android:layout_below="@+id/newPassword"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/retypePass"
                android:textColor="@color/outerText"
                android:textSize="@dimen/daysRemaining" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView81"
                android:layout_below="@+id/textView81"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/background"
                app:backgroundTint="@color/white" />


            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirmPassword"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/register_button"
                android:fontFamily="@font/gotham_bold"
                android:text="@string/update"
                android:textColor="@color/white" />

        </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>