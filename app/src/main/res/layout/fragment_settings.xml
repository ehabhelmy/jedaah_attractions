<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlack"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/payment_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/gotham_bold"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="@dimen/static_title_size" />

            <RelativeLayout
                android:id="@+id/notification_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView94"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/notification"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <com.suke.widget.SwitchButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:sb_button_color="@color/white"
                    app:sb_background="@color/colorTitle"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>

            <View
                android:id="@+id/notification_container_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/notification_container"
                android:layout_marginTop="20dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notification_container_divider"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/language"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/languageChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/english"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

            </RelativeLayout>

            <View
                android:id="@+id/language_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/language"
                android:layout_marginTop="20dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/language_divider"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView129"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/feedback"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:tint="@color/staticTitle"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/feedback_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/feedback"
                android:layout_marginTop="20dp"
                android:background="@color/white" />


            <RelativeLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedback_divider"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView229"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/about"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:tint="@color/staticTitle"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/about_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/about"
                android:layout_marginTop="20dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/contactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_divider"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/contactUs"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:tint="@color/staticTitle"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </RelativeLayout>

            <View
                android:id="@+id/contactUs_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/contactUs"
                android:layout_marginTop="20dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contactUs_divider"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView97"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:tint="@color/staticTitle"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>