<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        layout="@layout/loading_overlay"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/orderContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/payment_bg">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlack">

                <RelativeLayout
                    android:id="@+id/change11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_payment_bg"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="28dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/checkOut"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_inner" />

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textView"
                        android:layout_marginEnd="16dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/event"
                        android:textColor="@color/staticTitle"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/eventTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_below="@+id/textView3"
                        android:layout_marginTop="11dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="Amr Diab Concert"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/eventTitle"
                        android:layout_below="@+id/eventTitle"
                        android:layout_marginTop="24dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/personalInfo"
                        android:textColor="@color/staticTitle"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView27"
                        android:layout_below="@+id/textView27"
                        android:layout_marginTop="11dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="Ehab Mahmoud Helmy"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/name"
                        android:layout_below="@+id/name"
                        android:layout_marginTop="2dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="ehab.helmy@spade.studio"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/email"
                        android:layout_below="@+id/email"
                        android:layout_marginTop="2dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="01004576935"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/nationalId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/mobile"
                        android:layout_below="@+id/mobile"
                        android:layout_marginTop="2dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="1231231293812948918249"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/nationalId"
                        android:layout_below="@+id/nationalId"
                        android:layout_marginTop="24dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/paymentMethod"
                        android:textColor="@color/staticTitle"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/paymentMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView32"
                        android:layout_below="@+id/textView32"
                        android:layout_marginTop="11dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="Credit Card"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <Button
                        android:id="@+id/change"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignEnd="@+id/cancel"
                        android:layout_alignTop="@+id/textView32"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/rounded_rectangle_stroke_black"
                        android:text="@string/change"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="19dp"
                    fontPath="@string/font_medium"
                    tools:ignore="MissingPrefix"
                    android:text="@string/pickEventDay"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <com.spade.ja.ui.widget.StaticGridView
                    android:id="@+id/eventGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView34"
                    android:layout_marginTop="11dp"
                    android:columnWidth="180dp"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:listSelector="#00000000"
                    android:numColumns="2"
                    android:stretchMode="spacingWidthUniform"
                    android:verticalSpacing="10dp">

                </com.spade.ja.ui.widget.StaticGridView>

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView34"
                    android:layout_below="@+id/eventGrid"
                    android:layout_marginTop="19dp"
                    fontPath="@string/font_medium"
                    tools:ignore="MissingPrefix"
                    android:text="@string/ticketsType"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ticketsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView35"
                    android:layout_below="@+id/textView35"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/ticketsList"
                    android:layout_below="@+id/ticketsList"
                    android:layout_marginTop="19dp"
                    fontPath="@string/font_medium"
                    tools:ignore="MissingPrefix"
                    android:text="@string/numberTickets"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <ImageView
                    android:id="@+id/imageMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView42"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_minus_ic" />

                <ImageView
                    android:id="@+id/imagePlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/imageMinus"
                    android:layout_marginEnd="64dp"
                    app:srcCompat="@drawable/ic_plus_ic" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageMinus"
                    android:layout_alignTop="@+id/imageMinus"
                    fontPath="@string/font_book"
                    tools:ignore="MissingPrefix"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/title_inner" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView34"
                    android:layout_below="@+id/imageMinus"
                    android:layout_marginTop="12dp"
                    fontPath="@string/font_medium"
                    tools:ignore="MissingPrefix"
                    android:text="@string/hint"
                    android:textColor="@color/google"
                    android:textSize="@dimen/cash" />

                <TextView
                    android:id="@+id/numTickets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/relativeLayout2"
                    android:layout_alignBottom="@+id/textView44"
                    android:layout_alignTop="@+id/textView44"
                    android:layout_toEndOf="@+id/textView44"
                    fontPath="@string/font_book"
                    tools:ignore="MissingPrefix"
                    android:gravity="center"
                    android:text="Only 3 tickets are available"
                    android:textColor="@color/outerText"
                    android:textSize="@dimen/cardsubtitle" />

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView44"
                    android:layout_marginTop="12dp"
                    android:background="@color/background"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="38dp"
                        fontPath="@string/font_bold"
                        tools:ignore="MissingPrefix"
                        android:text="@string/total"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/title_inner" />

                    <TextView
                        android:id="@+id/ticketsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView46"
                        android:layout_alignBottom="@+id/textView46"
                        android:layout_marginStart="2dp"
                        android:layout_toEndOf="@+id/textView46"
                        fontPath="@string/font_book"
                        tools:ignore="MissingPrefix"
                        android:gravity="center"
                        android:text="1 ticket"
                        android:textColor="@color/outerText"
                        android:textSize="@dimen/cardsubtitle" />

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView46"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textView46"
                        android:layout_marginEnd="29dp"
                        fontPath="@string/font_bold"
                        tools:ignore="MissingPrefix"
                        android:gravity="center"
                        android:text="250 SAR"
                        android:textSize="@dimen/title_inner" />

                </RelativeLayout>

                <Button
                    android:id="@+id/done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_rectangle_green"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>