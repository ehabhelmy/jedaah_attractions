<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/loading_overlay" android:visibility="gone" android:id="@+id/load"/>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedScroll"
    android:background="@drawable/payment_bg">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightBlack">

            <RelativeLayout
                android:id="@+id/change11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_payment_bg"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/checkOut"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_inner" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/attraction"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="Amr Diab Concert"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/eventTitle"
                    android:layout_below="@+id/eventTitle"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/personalInfo"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView27"
                    android:layout_below="@+id/textView27"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="Ehab Mahmoud Helmy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/name"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="ehab.helmy@spade.studio"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/email"
                    android:layout_below="@+id/email"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="01004576935"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/nationalId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/mobile"
                    android:layout_below="@+id/mobile"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="1231231293812948918249"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/nationalId"
                    android:layout_below="@+id/nationalId"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="@string/paymentMethod"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/paymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView32"
                    android:layout_below="@+id/textView32"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/gotham_medium"
                    android:text="Credit Card"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

                <Button
                    android:id="@+id/change"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@+id/cancel"
                    android:layout_alignTop="@+id/textView32"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/rounded_rectangle_stroke_black"
                    android:text="@string/change"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/dateTime"
                android:textColor="@color/staticTitle"
                android:textSize="@dimen/static_title_size" />

                <RelativeLayout
                    android:id="@+id/eventDayContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle_black"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_below="@+id/textView34"
                    android:layout_marginTop="11dp"
                    android:layout_alignStart="@+id/textView34">


                    <TextView
                        android:id="@+id/attractionMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/gotham_medium"
                        android:text="NOV"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/cash" />

                    <TextView
                        android:id="@+id/attractionDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/attractionMonth"
                        android:layout_alignStart="@+id/attractionMonth"
                        android:layout_below="@+id/attractionMonth"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:text="13"
                        android:maxLines="1"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/title_inner" />

                    <TextView
                        android:id="@+id/attractionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@+id/attractionDay"
                        android:fontFamily="@font/gotham_medium"
                        android:text="Wed 7:30 PM"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/cash" />
                </RelativeLayout>

            <Button
                android:id="@+id/changeTime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/eventDayContainer"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_rectangle_stroke_white"
                android:text="@string/change"
                android:textColor="@color/lightBlack"
                android:textSize="@dimen/static_title_size" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView34"
                android:layout_below="@+id/eventDayContainer"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/ticketsType"
                android:textColor="@color/staticTitle"
                android:textSize="@dimen/static_title_size" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ticketsList"
                android:nestedScrollingEnabled="false"
                android:layout_alignStart="@+id/textView35"
                android:layout_below="@+id/textView35"
                android:layout_marginTop="11dp" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ticketsList"
                android:layout_below="@+id/ticketsList"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/ticketAddOns"
                android:textColor="@color/staticTitle"
                android:textSize="@dimen/static_title_size" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addOnsList"
                android:nestedScrollingEnabled="false"
                android:layout_alignStart="@+id/textView35"
                android:layout_below="@+id/textView42"
                android:layout_marginTop="11dp" />


            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/addOnsList"
                android:layout_marginTop="12dp"
                android:background="@color/background"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="38dp"
                    android:fontFamily="@font/gotham_bold"
                    android:text="@string/total"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/title_inner" />

                <TextView
                    android:id="@+id/ticketsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView46"
                    android:layout_alignBottom="@+id/textView46"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/textView46"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="1 ticket"
                    android:textColor="@color/outerText"
                    android:textSize="@dimen/cardsubtitle" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView46"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textView46"
                    android:layout_marginEnd="29dp"
                    android:fontFamily="@font/gotham_bold"
                    android:gravity="center"
                    android:text="250 SAR"
                    android:textSize="@dimen/title_inner" />

            </RelativeLayout>

            <Button
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rectangle_green"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/static_title_size" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>