<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/load"
        layout="@layout/loading_overlay"
        android:visibility="gone" />

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/payment_bg">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlack">

                <RelativeLayout
                    android:id="@+id/change11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_payment_bg"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="28dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/checkOut"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_inner" />

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/attraction"
                        android:textColor="@color/staticTitle"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/eventTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_marginTop="11dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="Amr Diab Concert"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/eventTitle"
                        android:layout_alignStart="@+id/eventTitle"
                        android:layout_marginTop="24dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/personalInfo"
                        android:textColor="@color/staticTitle"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView27"
                        android:layout_alignStart="@+id/textView27"
                        android:layout_marginTop="11dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="Ehab Mahmoud Helmy"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignStart="@+id/name"
                        android:layout_marginTop="2dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="ehab.helmy@spade.studio"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:layout_alignStart="@+id/email"
                        android:layout_marginTop="2dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="01004576935"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/nationalId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile"
                        android:layout_alignStart="@+id/mobile"
                        android:layout_marginTop="2dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="1231231293812948918249"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nationalId"
                        android:layout_alignStart="@+id/nationalId"
                        android:layout_marginTop="24dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="@string/paymentMethod"
                        android:textColor="@color/staticTitle"
                        android:textSize="@dimen/static_title_size" />

                    <TextView
                        android:id="@+id/paymentMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView32"
                        android:layout_alignStart="@+id/textView32"
                        android:layout_marginTop="11dp"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="Credit Card"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                    <Button
                        android:id="@+id/change"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/textView32"
                        android:layout_alignEnd="@+id/cancel"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/rounded_rectangle_stroke_black"
                        android:text="@string/change"
                        android:textColor="@color/white"
                        android:textSize="@dimen/static_title_size" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="19dp"
                    fontPath="@string/font_medium"
                    tools:ignore="MissingPrefix"
                    android:text="@string/dateTime"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <RelativeLayout
                    android:id="@+id/eventDayContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView34"
                    android:layout_alignStart="@+id/textView34"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/rounded_rectangle_black"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp">


                    <TextView
                        android:id="@+id/attractionMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:text="NOV"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/cash" />

                    <TextView
                        android:id="@+id/attractionDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/attractionMonth"
                        android:layout_alignStart="@+id/attractionMonth"
                        android:layout_alignEnd="@+id/attractionMonth"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="13"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/title_inner" />

                    <TextView
                        android:id="@+id/attractionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@+id/attractionDay"
                        fontPath="@string/font_medium"
                        tools:ignore="MissingPrefix"
                        android:maxLines="1"
                        android:text="Wed 7:30 PM"
                        android:textColor="@color/white"
                        android:textSize="@dimen/cash" />
                </RelativeLayout>

                <Button
                    android:id="@+id/changeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/eventDayContainer"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/rounded_rectangle_stroke_white"
                    android:text="@string/change"
                    android:textColor="@color/lightBlack"
                    android:textSize="@dimen/static_title_size" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventDayContainer"
                    android:layout_alignStart="@+id/textView34"
                    android:layout_marginTop="19dp"
                    fontPath="@string/font_medium"
                    tools:ignore="MissingPrefix"
                    android:text="@string/ticketsType"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ticketsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView35"
                    android:layout_alignStart="@+id/textView35"
                    android:layout_marginTop="11dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ticketsList"
                    android:layout_alignStart="@+id/ticketsList"
                    android:layout_marginTop="19dp"
                    fontPath="@string/font_medium"
                    tools:ignore="MissingPrefix"
                    android:text="@string/ticketAddOns"
                    android:textColor="@color/staticTitle"
                    android:textSize="@dimen/static_title_size" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/addOnsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView42"
                    android:layout_alignStart="@+id/textView35"
                    android:layout_marginTop="11dp"
                    android:nestedScrollingEnabled="false" />


                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addOnsList"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:background="@color/background"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="38dp"
                        fontPath="@string/font_bold"
                        tools:ignore="MissingPrefix"
                        android:text="@string/total"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/title_inner" />

                    <TextView
                        android:id="@+id/ticketsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView46"
                        android:layout_alignBottom="@+id/textView46"
                        android:layout_marginStart="2dp"
                        android:layout_toEndOf="@+id/textView46"
                        fontPath="@string/font_book"
                        tools:ignore="MissingPrefix"
                        android:gravity="center"
                        android:text="1 ticket"
                        android:textColor="@color/outerText"
                        android:textSize="@dimen/cardsubtitle" />

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView46"
                        android:layout_alignBottom="@+id/textView46"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="29dp"
                        fontPath="@string/font_bold"
                        tools:ignore="MissingPrefix"
                        android:gravity="center"
                        android:text="250 SAR"
                        android:textSize="@dimen/title_inner" />

                </RelativeLayout>

                <Button
                    android:id="@+id/done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="32dp"
                    fontPath="@string/font_bold"
                    tools:ignore="MissingPrefix"
                    android:background="@drawable/rounded_rectangle_green"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/static_title_size" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>