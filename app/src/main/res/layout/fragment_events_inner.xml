<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:weightSum="8">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <com.like.LikeButton
            android:id="@+id/favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="192dp"
            android:background="@drawable/circle"
            app:anim_scale_factor="2"
            app:circle_end_color="@color/staticTitle"
            app:circle_start_color="@color/staticTitle"
            app:dots_primary_color="@color/staticTitle"
            app:dots_secondary_color="@color/staticTitle"
            app:icon_size="25dp"
            app:icon_type="heart"
            app:like_drawable="@drawable/ic_like_full"
            app:unlike_drawable="@drawable/ic_like_empty" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/favourite"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/gotham_bold_0"
            android:gravity="center_horizontal"
            android:text="NOV"
            android:textColor="@color/staticTitle"
            android:textSize="@dimen/titleSize" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/gotham_bold_0"
            android:gravity="center_horizontal"
            android:text="13"
            android:textColor="@color/staticTitle"
            android:textSize="@dimen/titleSize" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/gotham_bold_0"
            android:gravity="center_horizontal"
            android:text="3-days"
            android:layout_marginBottom="10dp"
            android:textColor="@color/staticTitle"
            android:textSize="@dimen/daysRemaining" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favourite"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/textView2"
            android:gravity="center_horizontal"
            android:fontFamily="@font/gotham_medium"
            android:textSize="@dimen/static_title_size"
            android:textColor="@color/colorTitle"
            android:text="Amr Diab Concert" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_above="@+id/textView5"
            android:layout_alignStart="@+id/textView6"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignTop="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:fontFamily="@font/gotham_book"
            android:gravity="center"
            android:text="ART | GALLERY"
            android:textSize="@dimen/daysRemaining" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignStart="@+id/imageView6"
            android:layout_alignTop="@+id/textView5"
            android:fontFamily="@font/gotham_bold"
            android:gravity="center"
            android:text="22 Interested - 230 Going"
            android:textSize="@dimen/cardsubtitle" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:tint="@color/staticTitle"
                app:srcCompat="@drawable/ic_location_on_black_24dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView7"
                android:layout_alignTop="@+id/imageView7"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/imageView7"
                android:fontFamily="@font/gotham_medium"
                android:textSize="@dimen/titleSize"
                android:gravity="center"
                android:text="12, Al-Aziz , Jeddah" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="6dp"
                android:textColor="@color/staticTitle"
                android:fontFamily="@font/gotham_book"
                android:textSize="@dimen/daysRemaining"
                android:text="@string/getDirections" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView7"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="10dp"
                android:tint="@color/staticTitle"
                app:srcCompat="@drawable/events_ic" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView9"
                android:layout_alignStart="@+id/textView10"
                android:layout_alignTop="@+id/imageView9"
                android:fontFamily="@font/gotham_medium"
                android:textSize="@dimen/titleSize"
                android:gravity="center"
                android:text="November 13 - November 15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_alignEnd="@+id/textView12"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_book"
                    android:layout_marginBottom="2dp"
                    android:textSize="@dimen/cardsubtitle"
                    android:text="Friday, November 13 at 3 PM - 5 PM" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_book"
                    android:textSize="@dimen/cardsubtitle"
                    android:layout_marginBottom="2dp"
                    android:text="Saturday, November 14 at 3 PM - 5 PM" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView9"
                android:layout_alignStart="@+id/imageView9"
                android:layout_below="@+id/linearLayout"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/googleg_standard_color_18" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView11"
                android:layout_alignStart="@+id/textView12"
                android:text="hamada.com" />

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@color/lightBlack">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:tint="@color/staticTitle"
            app:srcCompat="@drawable/events_ic" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView12"
            android:layout_alignTop="@+id/imageView12"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/gotham_book"
            android:layout_toEndOf="@+id/imageView12"
            android:text="100 - 250 SAR" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorTitle"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/buyNow" />
    </RelativeLayout>
</LinearLayout>